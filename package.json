{
  "name": "poulma",
  "version": "1.3.2",
  "scripts": {
    "build:css": "npx sass src/scss/poulma.scss dist/poulma.css",
    "postcss": "npx postcss dist/poulma.css --use autoprefixer -o dist/poulma.css",
    "build:js": "cp src/js/poulma.js dist/",
    "build": "npm run build:css && npm run postcss && npm run build:js"
  },
  "devDependencies": {
    "autoprefixer": "^10.0.0",
    "postcss": "^8.0.0",
    "postcss-cli": "^8.0.0",
    "sass": "^1.0.0"
  }
}
